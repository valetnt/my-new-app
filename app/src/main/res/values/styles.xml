<resources>

<!-- Base application theme. -->
<style name="PalliativeTheme" parent="Theme.AppCompat.Light.DarkActionBar">
    <!-- Customize your theme here. -->
    <item name="colorPrimary">@color/colorPrimary</item>
    <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    <item name="colorAccent">@color/colorAccent</item>
</style>

<style name="PalliativeTheme.NoActionBar">
    <item name="windowActionBar">false</item>
    <item name="windowNoTitle">true</item>
</style>

<style name="PalliativeTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

<style name="PalliativeTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

<style name="PalliativeTheme.Palliative" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimaryDark">@android:color/holo_green_dark</item>
    <item name="colorAccent">@android:color/holo_blue_bright</item>
    <item name="android:colorBackground">@color/background_material_light</item>
    <item name="android:colorForeground">@color/foreground_material_light</item>
</style>

<style name="PalliativeTheme.Palliative.background">
    <item name="android:background">@android:color/holo_blue_light</item>
</style>

</resources>
